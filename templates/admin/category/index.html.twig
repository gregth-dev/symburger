{% extends 'admin/base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Catégories
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for category in categories %}
				<div class="card bg-dark mx-3" style="width: 18rem;">
					<img src="{{asset('images/' ~ category.image)}}" class="card-img-top" alt="...">
					<div class="card-body text-light">
						<h5 class="card-title">{{category.name}}</h5>
						<p class="card-text">{{category.description}}</p>
						<div class="text-center">
							<a href="{{path('admin_category_edit', {'id':category.id})}}" class="btn btn-primary">Modifier la catégorie</a>
							{{ include('admin/category/_delete_form.html.twig') }}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
